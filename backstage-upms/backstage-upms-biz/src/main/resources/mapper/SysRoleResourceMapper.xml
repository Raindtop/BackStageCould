<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.raindrop.upms.mapper.SysRoleResourceMapper">

    <resultMap id="SysRoleResourceMap" type="org.raindrop.upms.entity.SysRoleResource">
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
        <result property="deleted" column="deleted"/>
        <result property="roleId" column="role_id"/>
        <result property="resourceId" column="menu_id"/>
    </resultMap>
    <select id="getResourceByRoleIds" resultType="org.raindrop.upms.entity.SysResource">
        select b.*
        from sys_role_resource a
                 LEFT JOIN sys_resource b on a.resource_id = b.resource_id
        where a.role_id in
        <foreach collection="ids" index="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </select>
</mapper>
