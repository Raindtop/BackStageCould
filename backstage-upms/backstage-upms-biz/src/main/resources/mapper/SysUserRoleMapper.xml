<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.raindrop.upms.mapper.SysUserRoleMapper">

    <resultMap id="SysUserRoleMap" type="org.raindrop.upms.entity.SysUserRole">
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
        <result property="deleted" column="deleted"/>
        <result property="roleId" column="role_id"/>
        <result property="userId" column="user_id"/>
    </resultMap>
    <select id="getRoleByUserId" resultType="org.raindrop.upms.entity.SysRole">
        select b.*
        from sys_user_role a
                 LEFT JOIN sys_role b on a.role_id = b.role_id
        where a.user_id = #{userId}
    </select>
</mapper>
